<?xml version="1.0" encoding="utf-8" ?>
<ParametersSchema>

  <parser>
    <syntax>
      <commands only="yes"/>
      <options/>
      <parameters/>
    </syntax>
    <optionPrefix>-</optionPrefix>
    <optionValuePrefix>=</optionValuePrefix>
  </parser>

  <defaultOptions>
    <option ref="optHideAfterStart"/>
    <option ref="optWait"/>
  </defaultOptions>

  <commands default="cmdProgramDescription">
    <!--

    <command id="cmdProgramDescription">
